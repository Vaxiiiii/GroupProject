<Page x:Class="ProjectGroup.EntryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectGroup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntryPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Recipe Name:"/>
            <TextBox x:Name="RecipeNameTextBox" Width="200"/>
            <Label Content="Ingredients:"/>
            <TextBox x:Name="IngredientsTextBox" Width="200" Height="100"/>
            <Label Content="Instructions:"/>
            <TextBox x:Name="InstructionsTextBox" Width="200" Height="100"/>
            <Button Content="Submit" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Page>
